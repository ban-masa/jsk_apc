<launch>

  <arg name="BASE_NAME" default="kinect2_external" />

  <include file="$(find kinect2_bridge)/launch/kinect2_bridge.launch">
      <arg name="base_name" value="$(arg BASE_NAME)" /> 
      <arg name="publish_tf" value="true" />
  </include>

  <arg name="INPUT_DEPTH" value="/$(arg BASE_NAME)/hd/points"/>
  <arg name="INPUT_CLOUD" value="/$(arg BASE_NAME)/hd/points"/>

  <arg name="MANAGER" value="segmentation_in_stow_manager" />
  <node name="$(arg MANAGER)"
        pkg="nodelet" type="nodelet" args="manager" />

  <!-- stow clipper -->
  <node name="stow_clipper"
        pkg="nodelet" type="nodelet"
        args="load jsk_pcl/AttentionClipper $(arg MANAGER)">
    <remap from="~input/points" to="$(arg INPUT_CLOUD)" />
    <rosparam>
      debug: true
      use_multiple_attention: false
      initial_pos: [-0.22, 0.30, 0.33]
      initial_rot: [0,0,0]
      dimensions: [0.37, 0.23, 0.20]
      frame_id: kinect2_external
    </rosparam>
  </node>

  <node name="stow_extract_pi"
        pkg="nodelet" type="nodelet"
        args="load jsk_pcl/ExtractIndices $(arg MANAGER)">
    <remap from="~input" to="$(arg INPUT_CLOUD)" />
    <remap from="~indices" to="/stow_clipper/point_indices" />
    <rosparam>
      max_queue_size: 200
      keep_organized: true
    </rosparam>
  </node>

  <node name="stow_euclid_clustering"
        pkg="nodelet" type="nodelet"
        args="load jsk_pcl/EuclideanClustering $(arg MANAGER)">
    <remap from="~input" to="stow_extract_pi/output" />
    <rosparam>
      min_size: 500
      max_size: 100000
    </rosparam>
  </node>

  <node name="stow_cpi_decomposer"
        pkg="nodelet" type="nodelet"
        args="load jsk_pcl/ClusterPointIndicesDecomposer $(arg MANAGER)">
    <remap from="~input" to="stow_extract_pi/output" />
    <remap from="~target" to="stow_euclid_clustering/output" />
    <rosparam>
      queue_size: 1000
    </rosparam>
  </node>

</launch>
